                                    "capacity": {
                                        "description": "Vehicle capacity (minimum 1)",
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "plat": {
                                        "description": "Unique vehicle license plate",
                                        "type": "string",
                                        "example": "AB123CD"
                                    },
                                    "profile_picture": {
                                        "description": "Profile picture of the driver (image file)",
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Driver and vehicle information updated successfully.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Driver and vehicle information updated successfully."
                                        },
                                        "driver": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "profile_picture": {
                                                    "type": "string",
                                                    "example": "profile_pictures/driver1.jpg"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "vehicle": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "type": {
                                                    "type": "string",
                                                    "example": "motor"
                                                },
                                                "capacity": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "plat": {
                                                    "type": "string",
                                                    "example": "AB123CD"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
