                                            "type": "object"
                                        },
                                        "payment_process": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "trip_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "payment_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "base_price": {
                                                    "type": "integer",
                                                    "example": 50000
                                                },
                                                "final_price": {
                                                    "type": "integer",
                                                    "example": 45000
                                                },
                                                "payment_status": {
                                                    "type": "boolean",
